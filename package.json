        "react-graph-vis": "^1.0.2",
        "react-scripts-ts": "2.8.0"
    },
    "scripts": {
        "rename-bundles": "cp build/`node css-bundle.js` build/bundle.css && cp build/`node js-bundle.js` build/bundle.js",
