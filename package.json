        "start": "react-scripts-ts start",
        "compile": "tsc --noEmit",
        "build": "react-scripts-ts build && yarn run rename-bundles",
        "test": "react-scripts-ts test --env=jsdom",
        "eject": "react-scripts-ts eject"
    },
    "devDependencies": {
        "@types/jest": "^21.1.5",
        "@types/node": "^8.0.47",
        "@types/react": "^16.0.18",
        "@types/react-dom": "^16.0.2"
    }
