    },
    "license": "MIT",
    "dependencies": {
        "@blueprintjs/core": "^1.32.0",
        "@modelica/fmi-data": "0.14.5",
        "computed-async-mobx": "^3.2.0",
        "mobx": "^3.3.1",
        "mobx-react": "^4.3.3",
        "react": "^16.0.0",
        "react-addons-css-transition-group": "^15.6.2",
